<Page xmlns="http://schemas.nativescript.org/tns.xsd"
      xmlns:indicator="nativescript-slideshow-busy-indicator"
 loaded="pageLoaded" class="page">

  <GridLayout id="root"  class="p-20">
    <Label text="{{ message }}" class="t-20 text-center c-black" textWrap="true"/>
    <indicator:BusyIndicator isBusy="{{ isBusy }}" images="{{ images }}" 
      backOpacity="0.1" 
      indicatorColor="yellow" 
      backColor="pink" 
      indicatorOpacity="1"></indicator:BusyIndicator>
    <StackLayout>
      <Button tap="{{ onClick }}" width="50" height="50" text="change busyness" />
          <Label text="test" class="t-20 text-center c-black" textWrap="true"/>
    </StackLayout>
  </GridLayout> 
</Page>