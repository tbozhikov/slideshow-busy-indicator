<Page xmlns="http://schemas.nativescript.org/tns.xsd"
      xmlns:indicator="nativescript-slideshow-busy-indicator"
 loaded="pageLoaded" class="page">

  <GridLayout id="root">
    <Label verticalAlignment="top" text="Test content" class="t-20 c-black" textWrap="true"/>
    <indicator:BusyIndicator isBusy="{{ isBusy }}" images="{{ images }}" 
      backOpacity="0.4" 
      indicatorColor="brown" 
      backColor="pink" 
      indicatorOpacity="0.8"
      indicatorBorderRadius="50"
      indicatorWidth="100"
      indicatorHeight="100" ></indicator:BusyIndicator>
    <StackLayout marginTop="50">
      <Button tap="{{ onClick }}" width="200" height="50" text="toggle" />
    </StackLayout>
  </GridLayout> 
</Page>