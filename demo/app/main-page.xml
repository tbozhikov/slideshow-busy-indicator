<Page xmlns="http://schemas.nativescript.org/tns.xsd"
      xmlns:indicator="nativescript-slideshow-busy-indicator"
 loaded="pageLoaded" class="page">

  <StackLayout id="root"  class="p-20">
    <indicator:BusyIndicator isBusy="{{ isBusy }}" images="{{images}}" lblText="{{message}}"></indicator:BusyIndicator>
    <Label text="{{ message }}" class="t-20 text-center c-black" textWrap="true"/>
  </StackLayout> 

</Page>